<h1 class="titulos">Mis productos</h1>
<!-- Botones de Ordenamiento -->
<div class="centrar-botones">
<div class="btn-group sorting-buttons" role="group" aria-label="Sorting Buttons">
  <a href="?page=1&sort=asc" class="btn btn-secondary">
    <i class="bi bi-sort-down-alt"></i> <!-- Ícono para Orden Ascendente -->
  </a>
  <a href="?page=1&sort=desc" class="btn btn-secondary">
    <i class="bi bi-sort-down"></i> <!-- Ícono para Orden Descendente -->
  </a>
</div>
</div>

<div class="contenedorCards custom-container">
    {{#each productos}}
    <div class="card mb-3">
        <!-- Agregar imagen del producto -->
        <img src="{{this.thumbnails}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Categoría: {{this.category}}</p>
            <p class="card-text">Precio: {{this.price}}</p>
            <p class="card-text">Stock: <span class="{{#if this.stock}}text-success{{else}}text-danger{{/if}}">{{this.stock}}</span></p>
            <!-- Botón Añadir a Carrito -->
            <button class="btn btn-primary add-to-cart mb-4 mt-4" data-product-id="{{this._id}}">Añadir a Carrito</button>
        </div>
    </div>
    {{/each}}
</div>

<!-- Controles de paginación -->
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    {{#if hasPrevPage}}
    <li class="page-item">
      <!-- Incluye el parámetro sort actual en el enlace de la página anterior -->
      <a class="page-link" href="?page={{prevPage}}{{#if sort}}&sort={{sort}}{{/if}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{/if}}
    {{#each pages}}
    <li class="page-item {{#if this.isCurrent}}active{{/if}}">
      <!-- Incluye el parámetro sort actual en el enlace de cada número de página -->
      <a class="page-link" href="?page={{this.number}}{{#if ../sort}}&sort={{../sort}}{{/if}}">{{this.number}}</a>
    </li>
    {{/each}}
    {{#if hasNextPage}}
    <li class="page-item">
      <!-- Incluye el parámetro sort actual en el enlace de la página siguiente -->
      <a class="page-link" href="?page={{nextPage}}{{#if sort}}&sort={{sort}}{{/if}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
    {{/if}}
  </ul>
</nav>
<script src="/js/agregarProducto.js"></script>